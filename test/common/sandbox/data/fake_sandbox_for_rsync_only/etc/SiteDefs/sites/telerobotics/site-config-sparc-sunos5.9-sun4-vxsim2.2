export SCOPE_INCDIR = -I/home/atbe/pkgs/src/vxWorks/wind2.0_sim/rti/scopetools.2.0b/include/share  -I/home/atbe/pkgs/src/vxWorks/wind2.0_sim/rti/rtilib.4.0b/include/share

